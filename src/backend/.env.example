# Course Companion Backend - Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_NAME=course-companion
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production

# Database (PostgreSQL via Neon/Supabase)
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/database

# Cloudflare R2 Storage
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY=your-r2-access-key
R2_SECRET_KEY=your-r2-secret-key
R2_BUCKET_NAME=course-content

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379/0

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS
CORS_ORIGINS=["http://localhost:3000","https://chat.openai.com"]

# API Base URL (for ChatGPT manifest)
API_BASE_URL=http://localhost:8000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
